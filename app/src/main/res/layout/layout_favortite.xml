<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutFavorite">




    <TextView
        android:padding="6dp"
        android:text="Hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewNameIdFavorite"
        android:layout_margin="2dp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:textSize="17sp"


        />

    <TextView
        android:id="@+id/textViewDateIdFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:paddingRight="25dp"
        ></TextView>




    <TextView

        android:id="@+id/goalHomeTeamIdFavorite"
        android:paddingRight="7dp"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_toLeftOf="@id/textViewDateIdFavorite"

        />
    <TextView
        android:id="@+id/vs"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/goalHomeTeamIdFavorite"
        android:layout_toLeftOf="@id/textViewDateIdFavorite"
        />
    <TextView

        android:id="@+id/goalAwayTeamFavorite"
        android:paddingRight="7dp"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/vs"
        android:layout_toLeftOf="@id/textViewDateIdFavorite"
        />
    <TextView
        android:id="@+id/elapsedID"
        android:padding="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_toLeftOf="@id/goalHomeTeamIdFavorite"
        android:layout_centerVertical="true"

        />
    <TextView
        android:id="@+id/dateFavourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:layout_centerHorizontal="true"
        android:padding="5dp"

        ></TextView>
</RelativeLayout>